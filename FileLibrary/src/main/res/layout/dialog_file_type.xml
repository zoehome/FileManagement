<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_radiu_20"
    android:paddingTop="20dp"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:id="@+id/iv_type_photo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/iv_type_photo"
        app:layout_constraintRight_toRightOf="@+id/iv_type_photo"
        app:layout_constraintTop_toBottomOf="@+id/iv_type_photo"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:text="图片"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/txt_file"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        android:id="@+id/iv_type_file"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/iv_type_file"
        app:layout_constraintRight_toRightOf="@+id/iv_type_file"
        app:layout_constraintTop_toBottomOf="@+id/iv_type_file"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:text="文件"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:text="取消"
        android:padding="10dp"
        android:background="#00000000"
        android:id="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/iv_type_file"
        android:layout_marginTop="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>