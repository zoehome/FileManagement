<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleBarWhiteStyle" parent="Widget.AppCompat.Toolbar">
        <item name="leftIcon">@drawable/bar_arrows_left_white</item>
        <item name="titleColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200px</item>
        <item name="android:paddingRight">24px</item>
        <item name="android:background">#00000000</item>
        <item name="titleSize">46px</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="lineVisible">false</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">#000000</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--遮罩层 -->
        <item name="android:backgroundDimAmount">0.68</item>
        <item name="android:layout_margin">@null</item>
        <item name="android:padding">@null</item>
    </style>

</resources>